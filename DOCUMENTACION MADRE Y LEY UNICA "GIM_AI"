Scripts SQL Básicos
Copy-- Morosidad actual
SELECT 
  COUNT(*) as morosos,
  SUM(monto) as total_deuda,
  AVG(CURRENT_DATE - due_date) as dias_promedio
FROM payments
WHERE estado = 'overdue';

-- Ocupación por franja
SELECT 
  EXTRACT(HOUR FROM timestamp) as hora,
  COUNT(*) as checkins,
  AVG(COUNT(*)) OVER (
    ORDER BY EXTRACT(HOUR FROM timestamp)
    ROWS BETWEEN 2 PRECEDING AND 2 FOLLOWING
  ) as promedio_movil
FROM checkins
WHERE timestamp > CURRENT_DATE - INTERVAL '7 days'
GROUP BY hora;

-- No-shows última semana
SELECT 
  c.nombre as clase,
  COUNT(CASE WHEN r.estado = 'no_show' THEN 1 END) as no_shows,
  COUNT(*) as total_reservas,
  ROUND(100.0 * COUNT(CASE WHEN r.estado = 'no_show' THEN 1 END) / COUNT(*), 1) as porcentaje
FROM reservations r
JOIN classes c ON r.class_id = c.id
WHERE r.fecha > CURRENT_DATE - INTERVAL '7 days'
GROUP BY c.nombre
HAVING COUNT(*) > 5
ORDER BY porcentaje DESC;
Configuración n8n Ejemplo
Copy{
  "name": "Check-in QR Flow",
  "nodes": [
    {
      "type": "webhook",
      "name": "QR Scan Trigger",
      "webhookPath": "checkin",
      "responseMode": "lastNode"
    },
    {
      "type": "googleSheets",
      "name": "Register Check-in",
      "operation": "append",
      "sheetId": "YOUR_SHEET_ID",
      "range": "checkins!A:F"
    },
    {
      "type": "whatsapp",
      "name": "Send Confirmation",
      "operation": "sendMessage",
      "messageType": "template",
      "templateName": "checkin_confirmed"
    }
  ]
}
