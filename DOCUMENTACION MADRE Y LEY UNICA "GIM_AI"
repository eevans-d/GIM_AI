  "name": "GIM_AI - Flujo Principal",
  "nodes": [
    {
      "name": "Webhook Check-in",
      "type": "n8n-nodes-base.webhook",
      "parameters": {
        "path": "checkin",
        "responseMode": "lastNode",
        "options": {}
      }
    },
    {
      "name": "Validar Miembro",
      "type": "n8n-nodes-base.postgres",
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT * FROM members WHERE telefono = '{{$json.phone}}'"
      }
    },
    {
      "name": "Registrar Check-in",
      "type": "n8n-nodes-base.postgres",
      "parameters": {
        "operation": "insert",
        "table": "checkins",
        "columns": "member_id,timestamp,source",
        "values": "={{$json.member_id}},={{$now}},=qr_cliente"
      }
    },
    {
      "name": "Enviar WhatsApp",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.whatsapp.com/send",
        "method": "POST",
        "body": {
          "to": "={{$json.phone}}",
          "template": "checkin_exitoso",
          "params": ["{{$json.nombre}}", "{{$now}}"]
        }
      }
    }
  ]
}
