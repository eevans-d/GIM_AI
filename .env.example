TELEGRAM_CHAT_ID=your-chat-id

# ===================================
# BUSINESS CONFIGURATION
# ===================================
GYM_NAME=Mi Gimnasio
GYM_TIMEZONE=America/Argentina/Buenos_Aires
GYM_CURRENCY=ARS
GYM_PHONE=+54xxxxxxxxxx

# Business hours
BUSINESS_HOURS_START=06:00
BUSINESS_HOURS_END=23:00

# Payment configuration
PAYMENT_GRACE_DAYS=3
MAX_DEBT_DAYS=14
MOROSIDAD_TARGET_PERCENT=10

# Class configuration
DEFAULT_CLASS_CAPACITY=25
WAITLIST_NOTIFY_TOP=3
OVERBOOKING_PERCENT=5

# ===================================
# BACKUP CONFIGURATION
# ===================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_AUTO_REPLACEMENTS=true
